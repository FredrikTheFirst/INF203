import numpy as np

def v(x):
    return [x[1] - 0.2*x[0], -x[0]]

def g(a, b, v, u):
    dot = np.array(v) @ np.array(u)
    if dot > 0:
        return a * dot
    else:
        return b * dot
    
def A(corner1, corner2, corner3):
    a, b, c = np.array(corner1), np.array(corner2), np.array(corner3)
    v1 = b - a
    v2 = c - a
    return 0.5 * abs(np.cross(v1, v2))